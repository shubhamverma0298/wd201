<!DOCTYPE html>
<html lang="en"> 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>"/>
    <title>To-Do Manager</title>
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("Content");
        function updateTodo(id, status){
            fetch(`/todos/${id}`,{
                method:"put",
                headers:{"Content-Type":"application/json"},
                body:JSON.stringify({
                    completed: !status,
                    _csrf: token
                }),
            })
            .then((res)=>{
                if(res.ok){
                window.location.reload();
                }
            })
            .catch((err)=> console.error(err));
        }
        function deleteTodo(id) {
            fetch(`/todos/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    _csrf: token,
                }),
            }).then((res) => {
                if (res.ok) {
                    window.location.reload();
                }
            })
                .catch((err) => console.error(err));
        }
    </script>
</head>
<body>
    <!-- <h1 style="text-align: center;">Todo Home page</h1> -->
    <div class="grid grid-cols-4">
        <div class="col-start-2 col-span-1">
            <%- include('header.ejs') %>
            <form action="/todos" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="flex gap-2 py-4 ">
                    <div class="flex-auto">
                        <input type="text" name="title" placeholder="what's next? " class="border border-grey-300 rounded text-grey-900 w-full p-2 text-sm "/>
                    </div>
                </div>
                <div class="flex-auto">
                    <input type="date" name="dueDate" class="border border-grey-300 rounded text-grey-900 w-full p-2 text-sm  leading-4"/>
                </div>
                </div>
                <div class="flex-none">
                <button type="submit" class="bg-green-600 text-white px-5 px-2 rounded py-1 font-medium mr-2 mb-2"> Add</button>
                </div>
            </form>
        <div>
            <h5>Overdue</h5>
            <span id="count-overdue">
                <%= overdue.length %>
            </span> 
            <%- include('todos.ejs', { title: "Overdue" , data: overdue }) %>
    
            <h5>Due Today</h5>
            <span id="count-due-today">
                <%= dueToday.length %>
            </span> 
            <%- include('todos.ejs', { title: "Due Today" , data: dueToday }) %>
    
            <h5>Due Later</h5>
            <span id="count-due-later">
                <%= dueLater.length %>
            </span> 
            <%- include('todos.ejs', { title: "Due Later" , data: dueLater }) %>
            <h5>Completed Items</h5>
            <span id="count-completed">
                <%= completed.length %>
            </span> 
            <%- include('todos.ejs', { title: "Completed Items" , data: completed}) %>
        </div>
    </div>
    <%- include('footer.ejs') %> 
</body>
</html>